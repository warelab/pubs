[% title = 'Create Funding' %]
<h1>[% title %]</h1>
<hr>
<form method="post" action="[% c.uri_for('/funding/create') %]">
<table border=0>
  <tr>
    <th align="right">Agency:</th>
    <td>
      <select name="agency_id">
        <option value="0">--select agency--</option>
        [% FOREACH agency IN agencies %]
        <option value="[% agency.id %]">[% agency.agency_name %]</option>
        [% END %]
      </select>
    </td>
  </tr>
  <tr>
    <th align="right">Award Number:</th>
    <td><input value="[% funding.award_number %]" size="60"></td>
  </tr>
  <tr>
    <th align="right">Title:</th>
    <td><textarea row="10" cols="70">[% funding.title %]</textarea></td>
  </tr>
  <tr>
    <th align="right">Abstract:</th>
    <td><textarea row="10" cols="70">[% funding.abstract %]</textarea></td>
  </tr>
  <tr>
    <td align="center" colspan="2">
      <input type="hidden" name="fundgin_id" value="[% funding.id %]">
      <input type="submit" value="Create">
    </td>
  </tr>
</table>
</form>
