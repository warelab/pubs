[% title = 'Agencies (' _ (agencies.count OR '0') _ ')' %]

<h1>[% title %]</h1>

<a href="[% c.uri_for('/agency/create_form') %]">Create Agency</a>

[% IF agencies.count > 0 %]
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Agency</th>
      <th>URL Template</th>
    </tr>
    </thead>
    <tbody>
    [% WHILE ( agency = agencies.next ) %]
      <tr>
        <td><a href="[% c.uri_for('/agency/view', agency.agency_id ) %]">[% agency.agency_name %]</a></td>
        <td>[% agency.url_template OR 'NA' %]</td>
      </tr>
    [% END %]
    </tbody>
  </table>
[% ELSE %]
  No agencies.
[% END %]
